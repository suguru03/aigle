env:
  es6: true
  node: true

extends: eslint:recommended

rules:
  # Possible Errors
  no-console: off
  no-empty: off

  # Best Practices
  curly: error
  dot-notation: error
  eqeqeq: error
  no-return-assign: error
  no-proto: error
  no-case-declarations: off
  no-prototype-builtins: off

  # Strict Mode
  strict:
    - error
    - global

  # Variables

  # Stylistic Issues
  camelcase: error
  comma-spacing: error
  key-spacing: error
  linebreak-style:
    - error
    - unix
  indent:
    - error
    - 2
    - { MemberExpression: off, SwitchCase: 1 }
  new-cap: error
  semi:
    - error
    - always
  space-unary-ops: error

  # ECMAScript 6
  no-var: error

  # Node.js
  callback-return: error
